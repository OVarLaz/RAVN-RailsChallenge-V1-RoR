<%= form_with model: pokemon do |form| %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'w-1/2 text-gradient' %>
    <% pokemon.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :element_type %><br>
    <%= form.select :element_type, options_for_select(Pokemon.element_types.map { |key, value| [key.humanize, key] }), {prompt: "Select Type of Element..."}, class: "form-control" %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.text_field :image, class: 'w-1/2 text-gradient' %>
    <% pokemon.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>



  <div>
    <%= form.label :main_technique %><br>
    <%= form.text_field :main_technique, class: 'w-1/2 text-gradient' %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, class: 'w-1/2 h-36 text-gradient' %><br>
    <% pokemon.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: 'flex flex-row button-add p-3 items-center rounded-2xl text-white' %>
  </div>
<% end %>
