<%= form_with model: pokemon do |form| %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% pokemon.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
    <% pokemon.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>



  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% pokemon.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
