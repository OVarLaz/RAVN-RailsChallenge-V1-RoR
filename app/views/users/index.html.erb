<div class="flex flex-row place-content-between">
  <h1>Trainees</h1>

  <%= link_to "Add Trainee", new_user_path %>
</div>

<div class="relative overflow-x-auto">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="px-6 py-3">i</th>
        <th scope="col" class="px-6 py-3">Name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr
        class="m-2 bg-white border-b dark:bg-gray-400 dark:border-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600"
      >
        <td class="px-6 py-4"><%= user.id %></td>
        <td class="px-6 py-4"><%= link_to user.name, user %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
