<div class="flex flex-row place-content-between">
<h1 class="py-6 text-2xl">My pokemons</h1>

<%= turbo_frame_tag "caught_pokemon_modal" do %>
    <div class="flex flex-row button-add p-3 items-center rounded-2xl text-white"> 
      <%= heroicon "puzzle-piece", options: { class: "h-5 w-5 text-white" } %>
      <%= link_to "Catch it", caught_pokemon_path %>
    </div>
<% end %>

</div>

<div class="relative overflow-x-auto">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="px-6 py-3">Name</th>
        <th scope="col" class="px-6 py-3">Caught Date</th>
        <th scope="col" class="px-6 py-3">Remove</th>
      </tr>
    </thead>
    <tbody>
      <% current_user.pokemons.each do |pokemon| %>
      <tr
        class="m-2 bg-white border-b dark:bg-gray-400 dark:border-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600"
      >
        <td class="px-6 py-4"><%= pokemon.name %></td>
        <td class="px-6 py-4"><%= pokemon.created_at %></td>
        <td class="px-6 py-4">
          <%= button_to "-", remove_pokemon_path, params: {pokemon_id:
          pokemon.id}, data: { turbo_method: :delete, turbo_confirm: "Are you
          sure?" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


