<h1 class="text-2xl"><%= @user.name %></h1>


<ul>
  <% @user_pokemons.each do |user_pokemon| %>
      <li>
        <%=  user_pokemon.name%>
      </li>
  <% end %>
</ul>


<ul class="flex">
  <li class="flex flex-row w-max button-add p-3 m-3 items-center rounded-2xl text-white"><%= link_to "Edit", edit_user_path(@user) %></li>
  <li class="flex flex-row w-max button-add p-3 m-3 items-center rounded-2xl text-white"><%= link_to "Destroy", user_path(@user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>